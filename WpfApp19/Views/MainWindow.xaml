<Window x:Class="WpfApp19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp19"
        xmlns:vm="clr-namespace:WpfApp19.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBox
                Text="{Binding Path=InputRadius}"
                Margin="10" Padding="10"/>
            <Button
                Command="{Binding Path=GetCircumference}"
                Content="Вычислить длину окружности"
                Margin="10" Padding="10"/>
            <TextBox
                Text="{Binding Path=OutputCircumference}"
                Margin="10" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
